# DevMesh Platform - Environment Configuration Template
# Copy this to .env and fill in your values

# MariaDB Configuration
DB_HOST=10.0.0.18
DB_PORT=3306
DB_NAME=devmesh
DB_USER=devmesh
DB_PASSWORD=YOUR_PASSWORD_HERE
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=10

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=DevMesh Platform - Observability API
API_VERSION=0.1.0

# API Authentication (B1)
# Set API_AUTH_ENABLED=true and API_KEY to require X-API-Key header
API_AUTH_ENABLED=false
API_KEY=

# Development mode (H5) - set to true only in dev
DEV_MODE=false

# Log Shipper Configuration
SHIPPER_BATCH_SIZE=50
SHIPPER_LOOKBACK_HOURS=24
SHIPPER_CURSOR_FILE=shipper/cursor.txt

# Node Identification (CHANGE THIS per node)
NODE_NAME=dev-services
NODE_HOST=dev-services
